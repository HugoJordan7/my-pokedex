<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Switch
                android:id="@+id/shine_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/details_about" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_shine"
                app:layout_constraintBottom_toBottomOf="@id/shine_button"
                app:layout_constraintStart_toEndOf="@id/shine_button"
                app:layout_constraintTop_toTopOf="@id/shine_button" />


            <include
                android:id="@+id/details_header"
                layout="@layout/details_header" />

            <include
                android:id="@+id/details_about"
                layout="@layout/details_about" />

            <include
                android:id="@+id/details_types"
                layout="@layout/details_types" />

            <include
                android:id="@+id/details_description"
                layout="@layout/details_description" />

            <include
                android:id="@+id/details_status"
                layout="@layout/details_status" />

            <include
                android:id="@+id/details_weaknesses"
                layout="@layout/details_weaknesses" />

            <include
                android:id="@+id/details_evolutions"
                layout="@layout/details_evolutions" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@id/details_evolutions" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progress_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/blue_500"
        android:visibility="gone"
        android:layout_gravity="center"
        tools:visibility="visible" />

</FrameLayout>