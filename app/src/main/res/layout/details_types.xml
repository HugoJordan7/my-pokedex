<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintTop_toBottomOf="@id/details_about">

    <TextView
        android:id="@+id/details_types_title"
        style="@style/titles_poke_details"
        android:text="@string/types"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/details_primary_type"
        android:layout_width="@dimen/type_image_width"
        android:layout_height="@dimen/type_image_height"
        android:layout_marginTop="8dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@id/details_types_title"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/grass_type" />

    <ImageView
        android:id="@+id/details_second_type"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@id/details_primary_type"
        app:layout_constraintStart_toEndOf="@id/details_primary_type"
        android:src="@drawable/poison_type" />

</androidx.constraintlayout.widget.ConstraintLayout>
