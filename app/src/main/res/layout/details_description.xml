<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/details_description_title"
        android:text="@string/description"
        style="@style/titles_poke_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/details_description"
        android:textSize="16sp"
        android:textColor="@color/black_transparent_1"
        android:lineSpacingExtra="5dp"
        android:textAlignment="textStart"
        android:text="Há uma grande flor nas costas de VENUSAUR. Diz-se que a flor adquire cores vivas se receber bastante nutrição e luz solar. O aroma da flor acalma as emoções das pessoas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="@dimen/details_margin_right"
        app:layout_constraintTop_toBottomOf="@+id/details_description_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>