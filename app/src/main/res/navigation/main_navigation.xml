<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/home_fragment">

    <fragment
        android:label="@string/home"
        tools:layout="@layout/fragment_home"
        android:id="@+id/home_fragment"
        android:name="com.example.mypokedex.view.HomeFragment">
        <action
            android:id="@+id/action_home_fragment_to_search_fragment"
            app:destination="@id/search_fragment" />
    </fragment>

    <fragment
        android:label=""
        tools:layout="@layout/fragment_search"
        android:id="@+id/search_fragment"
        android:name="com.example.mypokedex.view.SearchFragment">
    </fragment>

    <fragment
        android:label="@string/unknown_pokemon"
        tools:layout="@layout/fragment_unknown_pokemon"
        android:id="@+id/unknown_pokemon_fragment"
        android:name="com.example.mypokedex.view.UnknownPokemonFragment"/>

    <fragment
        android:label="@string/about"
        tools:layout="@layout/fragment_about"
        android:id="@+id/about_fragment"
        android:name="com.example.mypokedex.view.AboutFragment"/>

</navigation>