<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="nav_view_elements">
        <item name="android:layout_marginBottom">@dimen/nav_view_elements_margin_bottom</item>
    </style>

    <style name="titles_poke_details">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/details_margin_left</item>
        <item name="android:layout_marginTop">@dimen/details_margin_top</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">italic</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="about_text_element">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/details_margin_left</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="image_evolution">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/image_evolution_height</item>
    </style>

    <style name="bg_image_evolution">
        <item name="android:background">@drawable/evolutions_shape</item>
        <item name="android:layout_width">@dimen/bg_image_evolution_width</item>
        <item name="android:layout_height">@dimen/bg_image_evolution_height</item>
    </style>

    <style name="text_view_evolution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="arrow_evolution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_evolution_arrow</item>
        <item name="android:layout_marginTop">95dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <dimen name="image_evolution_width">100dp</dimen>
    <dimen name="image_evolution_height">90dp</dimen>

    <dimen name="bg_image_evolution_width">100dp</dimen>
    <dimen name="bg_image_evolution_height">100dp</dimen>

    <dimen name="nav_view_elements_margin_bottom">20dp</dimen>
    <dimen name="details_margin_right">40dp</dimen>
    <dimen name="details_margin_left">20dp</dimen>
    <dimen name="details_items_margin_left">40dp</dimen>
    <dimen name="details_margin_top">20dp</dimen>
    <dimen name="type_image_height">30dp</dimen>
    <dimen name="type_image_width">120dp</dimen>
</resources>